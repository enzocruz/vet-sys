@model Vet.Web.Models.ViewModels.EditDoctorViewModel
@{
    ViewData["Title"]="Edit Doctors";
    ViewData["Page"]="Doctor";
}
<div style="background: white;">
        <br>
        <h3>Doctor Forms</h3>
        <br>
        <div class="container">
                <div class="row">
                    <form asp-action="Edit" method="post" asp-controller="Doctor" >
                    <div class="mb-3">
                        <label for="" class="form-label">Name</label>
                        <input type="text" class="form-control" name="Name" value="@Model.Name"/>    
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="" class="form-label">License</label>
                        <input type="text" class="form-control" name="License" value="@Model.License"/>    
                        <span asp-validation-for="License" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="" class="form-label">Address</label>
                        <input type="text" class="form-control" name="Address" value="@Model.Address"/>    
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                
                    <div class="mb-3">
                        <label for="" class="form-label">Contact Number</label>
                        <input type="text" class="form-control" name="ContactNumber" value="@Model.ContactNumber"/>    
                        <span asp-validation-for="ContactNumber" class="text-danger"></span>
                    </div>
                
                    <div class="mb-3">
                        <button class="btn btn-success" type="submit">Save </button>
                    </div>
                </form>
            </div>
        </div>
</div>


